<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Home"
            android:paddingRight="140dp"
            app:layout_constraintBottom_toBottomOf="@+id/callButton"
            app:layout_constraintEnd_toStartOf="@+id/callButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/callButton"
            app:srcCompat="@drawable/logo_text"
            android:paddingEnd="140dp" />

        <Button
            android:id="@+id/callButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_rounded_green"
            android:drawableBottom="@drawable/phone"
            android:paddingBottom="8dp"
            android:textColor="@color/buttonTextColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</merge>